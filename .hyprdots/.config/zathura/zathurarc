set statusbar-v-padding         8
set font                        "JetBrainsMono Nerd Font Medium 14"

# ----------------------------------
# Search Settings
# ----------------------------------
set incremental-search          "true"
set search-hadjust              "true"

# ----------------------------------
# System Integration
# ----------------------------------
set selection-clipboard         "clipboard"
set dbus-service                "true"
set sandbox                     "strict"
set synctex                     "true"
set synctex-editor-command      "nvim --headless -c 'edit +%{line} %{input}'"

# ----------------------------------
# Using Default Keybindings Only
# ----------------------------------
# All keybindings removed to use zathura defaults
# Default bindings include:
# - Arrow keys or hjkl for navigation
# - Page Up/Down for page navigation
# - +/- for zoom
# - / for search
# - q to quit
# - Tab for index toggle
