#!/usr/bin/env bash
set -e
if [[ ! -d "/home/ahsan/git-repos/configs/fedora-system/.hyprdots/.config/hypr/hyprland" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/ahsan/git-repos/configs/fedora-system/.hyprdots/.config/hypr/hyprland")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/ahsan/git-repos/configs/fedora-system/.hyprdots/.config/hypr/hyprland" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/ahsan/git-repos/configs/fedora-system/.hyprdots/.config/hypr/hyprland/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/ahsan/git-repos/configs/fedora-system/.hyprdots/.config/hypr/hyprland/.envrc" "/home/ahsan/git-repos/configs/fedora-system/.hyprdots/.config/hypr/hyprland/.direnv"/*.rc
